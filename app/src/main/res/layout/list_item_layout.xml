<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    android:layout_margin="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/idTVCenterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Center Name"
            android:textColor="@color/black"
            android:padding="3dp"
            android:layout_margin="3dp"
            android:drawableLeft="@drawable/ic_hospital"
            android:drawablePadding="4dp"/>

        <TextView
            android:id="@+id/idTVCenterLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVCenterName"
            android:text="Center Location"
            android:textColor="@color/black"
            android:padding="3dp"
            android:layout_margin="3dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="4dp"/>

        <TextView
            android:id="@+id/idTVCenterTiming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVCenterLocation"
            android:text="Center Timings"
            android:textColor="@color/black"
            android:padding="3dp"
            android:layout_margin="3dp"
            android:drawableLeft="@drawable/ic_timing"
            android:drawablePadding="4dp"/>

        <LinearLayout
            android:id="@+id/idLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_margin="3dp"
            android:layout_below="@id/idTVCenterTiming">

            <TextView
                android:id="@+id/idTVVaccineName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vaccine Name"
                android:textColor="@color/black"
                android:padding="3dp"
                android:layout_margin="3dp"
                android:drawableLeft="@drawable/ic_vaccine"
                android:drawablePadding="4dp"/>
            
            <TextView
                android:id="@+id/idTVVaccineFees"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fees"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_margin="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:orientation="horizontal"
            android:layout_below="@id/idLinearLayout">

            <TextView
                android:id="@+id/idAgeLimit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Age Limit"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/idAvailability"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Availability"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:padding="3dp"/>
        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>